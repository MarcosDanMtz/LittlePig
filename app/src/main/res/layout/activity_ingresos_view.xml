<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ingresos_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marcosmtz.littlepig.IngresosView">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           >

       <android.support.v7.widget.CardView
           android:id="@+id/card_view_ingreso_f"
           android:layout_gravity="center_horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           card_view:cardBackgroundColor="#FFFFFF"
           card_view:cardCornerRadius="4dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="1"
           android:layout_marginBottom="@dimen/text_margin"
           android:orientation="vertical">

           <TextView
               android:text="@string/tittle_ingresos_fijos"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/text_ingreso1"
               android:textColor="@color/colorTitles"
               android:textSize="@dimen/title_text_size"
               android:layout_marginTop="@dimen/text_margin"
               android:layout_marginLeft="@dimen/text_margin"
               />
           <LinearLayout
               android:id="@+id/container_list"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/text_margin">
               <TextView
                   android:layout_width="@dimen/label_width"
                   android:layout_height="wrap_content"
                   android:text="Agraga algÃºn gasto a tu lista"
                   android:layout_marginLeft="@dimen/text_margin"
                   android:layout_gravity="center_vertical"
                   android:textSize="20dp"
                   />
               <ImageButton
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="50dp"
                   android:saveEnabled="false"
                   android:background="@color/colorBlank"
                   />
               <ImageButton
                   android:layout_width="35dp"
                   android:layout_height="35dp"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="15dp"
                   android:saveEnabled="false"
                   android:background="@color/colorBlank"
                   />

           </LinearLayout>
           <LinearLayout
               android:id="@+id/container_list1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/text_margin">
               <TextView
                   android:layout_width="@dimen/label_width"
                   android:layout_height="wrap_content"
                   android:text="Sueldo"
                   android:layout_marginLeft="@dimen/text_margin"
                   android:layout_gravity="center_vertical"
                   android:textSize="20dp"
                   />
               <ImageButton
                   android:layout_width="@dimen/btn_edit"
                   android:layout_height="@dimen/btn_edit"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/margin_edit"
                   card_view:srcCompat="@android:drawable/ic_menu_edit"
                   android:background="@color/colorBlank"
                   />
               <ImageButton
                   android:id="@+id/btn_delete"
                   android:layout_width="@dimen/btn_delate"
                   android:layout_height="@dimen/btn_delate"
                   android:layout_gravity="center_vertical"
                   android:layout_marginLeft="@dimen/margin_deleta"
                   card_view:srcCompat="@android:drawable/ic_menu_delete"
                   android:background="@color/colorBlank"
                   />

           </LinearLayout>
           </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:id="@+id/card_view_ingreso_v"
               android:layout_gravity="center_horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               card_view:cardBackgroundColor="#FFFFFF"
               card_view:cardCornerRadius="4dp"
               android:layout_marginTop="@dimen/margin_first_element">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="1"
                   android:layout_marginBottom="@dimen/text_margin"
                   android:orientation="vertical">

                   <TextView
                       android:text="@string/tittle_ingresos_variables"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/colorTitles"
                       android:textSize="@dimen/title_text_size"
                       android:layout_marginTop="@dimen/text_margin"
                       android:layout_marginLeft="@dimen/text_margin"
                       />
                   <LinearLayout
                       android:id="@+id/container_list2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/text_margin">
                       <TextView
                           android:layout_width="@dimen/label_width"
                           android:layout_height="wrap_content"
                           android:text="Tanda"
                           android:layout_marginLeft="@dimen/text_margin"
                           android:layout_gravity="center_vertical"
                           android:textSize="20dp"
                           />
                       <ImageButton
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="50dp"
                           card_view:srcCompat="@android:drawable/ic_menu_edit"
                           android:background="@color/colorBlank"


                           />
                       <ImageButton
                           android:layout_width="35dp"
                           android:layout_height="35dp"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="15dp"
                           card_view:srcCompat="@android:drawable/ic_menu_delete"
                           android:background="@color/colorBlank"
                           />

                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/container_list3"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/text_margin">
                       <TextView
                           android:layout_width="@dimen/label_width"
                           android:layout_height="wrap_content"
                           android:text="Pago de prestamo a Juan"
                           android:layout_marginLeft="@dimen/text_margin"
                           android:layout_gravity="center_vertical"
                           android:textSize="20dp"
                           />
                       <ImageButton
                           android:layout_width="@dimen/btn_edit"
                           android:layout_height="@dimen/btn_edit"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="@dimen/margin_edit"
                           card_view:srcCompat="@android:drawable/ic_menu_edit"
                           android:background="@color/colorBlank"
                           />
                       <ImageButton
                           android:layout_width="@dimen/btn_delate"
                           android:layout_height="@dimen/btn_delate"
                           android:layout_gravity="center_vertical"
                           android:layout_marginLeft="@dimen/margin_deleta"
                           card_view:srcCompat="@android:drawable/ic_menu_delete"
                           android:background="@color/colorBlank"
                           />

                   </LinearLayout>
               </LinearLayout>
           </android.support.v7.widget.CardView>

           <Button
               android:text="@string/btn_agregar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.00"
               android:layout_gravity="end"
               android:layout_marginTop="@dimen/margin_edit"
               android:background="@color/colorButton"
               android:textColor="@color/colorTextButton"
               android:textSize="@dimen/button_text_size"
               />

           <Button
               android:text="@string/btn_ok"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_weight="0.00"
               android:layout_gravity="end"
               android:layout_marginTop="10dp"
               android:background="@color/colorPrimary"
               android:textColor="@color/colorTextButton"
               android:textSize="@dimen/button_text_size"
               />

       </LinearLayout>


   </ScrollView>

</RelativeLayout>
